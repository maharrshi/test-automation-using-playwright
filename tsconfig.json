{
    "compilerOptions": {
      "target": "ESNext",                      
      "module": "CommonJS",                   
      "lib": ["DOM", "ESNext"],               
      "strict": true,                         
      "esModuleInterop": true,                
      "skipLibCheck": true,                    
      "outDir": "./dist",                    
      "rootDir": "./src",                     
      "resolveJsonModule": true,               
      "types": ["node", "playwright"],         
      "moduleResolution": "node",            
      "allowJs": true,                      
      "noImplicitReturns": true,               
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "src/**/*.ts",            
      "specs/**/*.ts"         
    ],
    "exclude": [
      "node_modules",         
      "dist"                    
    ]
  }
  